<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinAppSample.InsertEmployeePage" Title="Insert Employee">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Masukan Nama Employee :" FontSize="Medium" />
            <Entry x:Name="txtNama" Placeholder="masukan nama employee" />
            <Label Text="Masukan Departement :" FontSize="Medium" />
            <Entry x:Name="txtDepartment" Placeholder="masukan nama department" />
            <Label Text="Masukan Qualification :" FontSize="Medium" />
            <Entry x:Name="txtQualification" Placeholder="masukan nama qualification" />
            <StackLayout Orientation="Horizontal">
                <Button x:Name="btnSave" Text="Save" StyleClass="Primary" 
                        Clicked="btnSave_Clicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>