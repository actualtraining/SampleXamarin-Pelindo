<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XamarinAppSample"
             x:Class="XamarinAppSample.MainPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label Text="Welcome to Xamarin.Forms!"
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="txtHello" Placeholder="masukan nama anda" />
            <Picker x:Name="picker" Title="Option" />
            <DatePicker x:Name="datePicker" Format="D" />
            <Stepper x:Name="stepper" Minimum="0" Maximum="10" Increment="1"/>
            <StackLayout Orientation="Horizontal">
                <Button x:Name="btnHello" Text="Hello" Clicked="btnHello_Clicked" />
                <Button x:Name="btnAdd" Text="Add" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>